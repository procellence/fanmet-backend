{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "strictNullChecks": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "lib": [
      "ES2015",
      "ESNext.Array",
      "dom"
    ],
    "types": [
      "node",
      "jest"
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        "@types/*"
      ]
    }
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
